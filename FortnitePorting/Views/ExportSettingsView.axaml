<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:FortnitePorting.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions;assembly=FortnitePorting"
             xmlns:versions="clr-namespace:CUE4Parse.UE4.Versions;assembly=CUE4Parse"
             xmlns:shared="clr-namespace:FortnitePorting.Shared;assembly=FortnitePorting.Shared"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fortnitePorting="clr-namespace:FortnitePorting"
             xmlns:navigation="clr-namespace:FortnitePorting.Controls.Navigation"
             xmlns:sidebar="clr-namespace:FortnitePorting.Controls.Navigation.Sidebar"
             d:DesignHeight="770" d:DesignWidth="1160"
             x:Class="FortnitePorting.Views.ExportSettingsView"
             x:DataType="viewModels:ExportSettingsViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        
        <sidebar:Sidebar x:Name="Sidebar" Grid.Column="0" ItemSelected="OnItemSelected">
            <sidebar:Sidebar.Items>
                <sidebar:SidebarItemText Text="EXPORT OPTIONS"/>
                <sidebar:SidebarItemButton Text="Blender" IconBitmap="/Assets/Icons/Blender.png" Tag="{x:Static fortnitePorting:EExportLocation.Blender}"/>
                <sidebar:SidebarItemButton Text="Unreal" IconBitmap="/Assets/Icons/Unreal.png" Tag="{x:Static fortnitePorting:EExportLocation.Unreal}"/>
                <sidebar:SidebarItemButton Text="Unity" IconBitmap="/Assets/Icons/Unity.png" Tag="{x:Static fortnitePorting:EExportLocation.Unity}" IsEnabled="False"/>
                <sidebar:SidebarItemButton Text="Folder" Icon="Folder" Tag="{x:Static fortnitePorting:EExportLocation.AssetsFolder}"/>
            </sidebar:Sidebar.Items>
        </sidebar:Sidebar>
        
        
        <ui:Frame Grid.Column="1" x:Name="ContentFrame"/>
    </Grid>
</UserControl>
