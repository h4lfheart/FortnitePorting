<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions;assembly=FortnitePorting"
             xmlns:settings="clr-namespace:FortnitePorting.ViewModels.Settings"
             xmlns:wave="clr-namespace:NAudio.Wave;assembly=NAudio.Core"
             xmlns:controls="clr-namespace:FortnitePorting.Controls.Settings"
             xmlns:controls1="clr-namespace:FortnitePorting.Controls"
             xmlns:fortnitePorting="clr-namespace:FortnitePorting"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FortnitePorting.Views.Settings.ApplicationSettingsView"
             x:DataType="settings:ApplicationSettingsViewModel">
    
    <ScrollViewer>
        <StackPanel VerticalAlignment="Top" Margin="{ext:Space 1}" Spacing="{ext:Space 0, 0, 0, 1}">
            <controls:SettingsItem Title="Theme"
                                   Description="The theme that should be used for Fortnite Porting.">
                <controls:SettingsItem.Footer>
                    <ComboBox ItemsSource="{ext:EnumToItemsSource {x:Type fortnitePorting:EThemeType}}"
                              SelectedItem="{Binding Theme, Converter={StaticResource EnumToRecord}}" >
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="ext:EnumRecord">
                                <controls1:IconText Text="{Binding Description}"
                                                    Icon="{Binding Icon}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
            
            <controls:SettingsItem Title="Application Data Folder (Optional)" Description="The folder in which all saved application data will save to. Defaults to %localappdata%/FortnitePorting.">
                <controls:SettingsItem.Footer>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding UseAppDataPath}"/>
                        <TextBox Text="{Binding AppDataPath}" Watermark="Ex. D:/Apps/FortnitePorting" IsEnabled="{Binding UseAppDataPath}"/>
                        <Button Margin="4 0 0 0" Command="{Binding BrowseAppDataPath}" IsEnabled="{Binding UseAppDataPath}">
                            <ui:SymbolIcon Symbol="Folder"/>
                        </Button>
                    </StackPanel>
                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
            
            <controls:SettingsItem Title="Assets Folder (Optional)" Description="The folder in which all assets will export to. Defaults to %localappdata%/FortnitePorting/Assets.">
                <controls:SettingsItem.Footer>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding UseAssetsPath}"/>
                        <TextBox Text="{Binding AssetsPath}" Watermark="Ex. D:/Art/FortnitePorting/Assets" IsEnabled="{Binding UseAssetsPath}"/>
                        <Button Margin="4 0 0 0" Command="{Binding BrowseAssetsPath}" IsEnabled="{Binding UseAssetsPath}">
                            <ui:SymbolIcon Symbol="Folder"/>
                        </Button>
                    </StackPanel>
                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
            
            <controls:SettingsItem Title="Audio Device" Description="The device that should be used for audio playback.">
                <controls:SettingsItem.Footer>
                    <ComboBox Grid.Row="0" Grid.Column="4" ItemsSource="{Binding AudioDevices}" 
                              SelectedIndex="{Binding AudioDeviceIndex, Mode=TwoWay}"
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="wave:DirectSoundDeviceInfo">
                                <TextBlock Text="{Binding Description}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
            
            <controls:SettingsItem Title="Tab Transitions" Description="Toggles the transition that plays when switching between tabs.">
                <controls:SettingsItem.Footer>
                    <ToggleSwitch IsChecked="{Binding UseTabTransitions}"/>
                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
            
            
            <controls:SettingsItem Title="Show Developer Settings" Description="Enables the developer settings tab.">
                <controls:SettingsItem.Footer>
                    <ToggleSwitch IsChecked="{Binding ShowDeveloperSettings}"/>
                </controls:SettingsItem.Footer>
            </controls:SettingsItem>
        </StackPanel>
    </ScrollViewer>
</UserControl>
